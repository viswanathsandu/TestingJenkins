<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.education.corsalite">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.orm.SugarApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:replace="android:icon,android:theme">

        <meta-data
            android:name="DATABASE"
            android:value="corsalite_db.db" />
        <meta-data
            android:name="VERSION"
            android:value="2" />
        <meta-data
            android:name="QUERY_LOG"
            android:value="true" />
        <meta-data
            android:name="DOMAIN_PACKAGE_NAME"
            android:value="com.education.corsalite.models.db" />

        <activity
            android:name=".activities.LoginActivity"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|orientation|uiMode|screenLayout|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.UserProfileActivity"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|orientation|uiMode|screenLayout|screenSize"
            android:theme="@style/UserProfileTheme" />
        <activity
            android:name=".activities.WebviewActivity"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|orientation|uiMode|screenLayout|screenSize"
            android:label="@string/title_activity_webview"
            android:theme="@style/UserProfileTheme"/>
        <activity
            android:name=".activities.WebActivity"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|orientation|uiMode|screenLayout|screenSize"
            android:label=""
            android:theme="@style/UserProfileTheme"/>
        <activity
            android:hardwareAccelerated="true"
            android:name=".activities.VideoActivity"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|orientation|uiMode|screenLayout|screenSize"
            android:label=""
            android:theme="@style/UserProfileTheme"/>
        <activity
            android:name=".activities.VirtualCurrencyActivity"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|orientation|uiMode|screenLayout|screenSize"
            android:label="@string/title_activity_currency"
            android:theme="@style/UserProfileTheme" />

        <activity
            android:name=".activities.StudyCentreActivity"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|orientation|uiMode|screenLayout|screenSize"
            android:label="Study Center"
            android:theme="@style/UserProfileTheme" />
        <activity
            android:name=".activities.AnalyticsActivity"
            android:screenOrientation="landscape"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|orientation|uiMode|screenLayout|screenSize"
            android:label="Analytics"
            android:theme="@style/UserProfileTheme" />
        <activity
            android:name=".activities.OfflineContentActivity"
            android:configChanges="keyboard|keyboardHidden|layoutDirection|orientation|uiMode|screenLayout|screenSize"
            android:label="Analytics"
            android:theme="@style/UserProfileTheme" />
    </application>

</manifest>