<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:colorPrimaryDark">@color/dark_blue</item>
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>
        <item name="android:textColorHint">@color/dark_gray</item>
    </style>

    <!-- Base application theme. -->
    <style name="UserProfileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorPrimary">@color/user_profile_toolbar</item>
        <item name="android:colorPrimaryDark">@color/user_profile_statusbar</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerItemStyle</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

</resources>
