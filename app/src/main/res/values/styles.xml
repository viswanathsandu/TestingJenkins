<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorPrimary">@color/blue</item>
        <item name="android:colorPrimaryDark">@color/dark_blue</item>
    </style>

    <!-- Base application theme. -->
    <style name="UserProfileTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:colorPrimary">@color/user_profile_toolbar</item>
        <item name="android:colorPrimaryDark">@color/user_profile_statusbar</item>
    </style>

    <style name="title_style">
        <item name="android:textColor">@color/bright_foreground_inverse_material_light</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
