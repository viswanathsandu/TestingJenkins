<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <!-- Base application theme. -->
    <style name="UserProfileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerItemStyle</item>
    </style>

    <style name="EditProfileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="title_style">
        <item name="android:textColor">@color/bright_foreground_inverse_material_light</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="analytics_title_style">
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="analytics_subtext_header_style">
        <item name="android:textColor">@color/text_white</item>
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="analytics_subtext_style">
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="study_center_title_style">
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="grid_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="grid_child_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="UserProfileCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabMaxWidth">@dimen/tab_max_width</item>
        <item name="tabIndicatorColor">@color/dark_blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/dark_blue</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="nav_view_style">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:background">@color/dark_blue</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="analytics_title">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="tiles_menu_title_txt">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="tiles_menu_value_txt">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <style name="user_profile_heading_bold">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/text_black</item>

    </style>

    <style name="user_profile_heading_caps">
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/green</item>
        <item name="textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
    <style name="user_profile_text">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="virtual_currency_header_text">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="virtual_currency_data_text">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="user_profile_text_gray">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <style name="user_profile_subheading">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="navigation_drawer_element" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="fontPath">@string/roboto_regular</item>
    </style>

    <style name="notes_heading">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
