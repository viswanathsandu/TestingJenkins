<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="colorControlNormal">@color/dark_gray</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>
        <item name="android:textColorHint">@color/dark_gray</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <!-- Base application theme. -->
    <style name="UserProfileTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:spinnerDropDownItemStyle">@style/spinnerItemStyle</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
    </style>

    <style name="TransparentTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="title_style">
        <item name="android:textColor">@color/bright_foreground_inverse_material_light</item>
        <item name="fontPath">fonts/Roboto-Regular.ttf</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="analytics_title_style">
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="analytics_text_style">
        <item name="android:textColor">@color/text_black</item>
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="analytics_legend_text_style">
        <item name="android:textColor">@color/text_black</item>
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="analytics_recommended_reading_heading_text_style">
        <item name="android:textColor">@color/text_white</item>
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="analytics_recommended_reading_text_style">
        <item name="android:textColor">@color/text_black</item>
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">11dp</item>
        <item name="android:paddingLeft">17dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:gravity">left</item>

    </style>

    <style name="study_center_title_style">
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="grid_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="grid_child_text_style">
        <item name="android:textColor">@color/white</item>
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="UserProfileCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/dark_blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/dark_blue</item>
    </style>

    <style name="OfflineCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/dark_blue</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabBackground">@color/gray</item>
        <item name="tabTextAppearance">@style/MyCustomTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/dark_blue</item>
    </style>

    <style name="MyCustomTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="spinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="nav_view_style">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@string/roboto_regular</item>
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="TreeNodeStyleCustom">
        <item name="android:paddingLeft">20dp</item>
    </style>

    <style name="analytics_title">
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="tiles_menu_title_txt">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="tiles_menu_value_txt">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="user_profile_heading_bold">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/text_black</item>

    </style>

    <style name="user_profile_heading_caps">
        <item name="fontPath">@string/roboto_medium</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/green</item>
        <item name="textAllCaps">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="user_profile_text">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="virtual_currency_header_text">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/sub_title1_text_size</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:padding">@dimen/vc_data_padding</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="exam_history_label_text">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="parttestgrid_header_text">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="virtual_currency_data_text">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/sub_title1_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:paddingLeft">@dimen/vc_data_padding</item>
        <item name="android:paddingRight">@dimen/vc_data_padding</item>
        <item name="android:paddingTop">@dimen/vc_data_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/vc_data_padding_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="user_profile_text_gray">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
        <item name="android:textColor">@color/text_gray</item>
    </style>

    <style name="user_profile_subheading">
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="navigation_drawer_element">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/text_padding_min</item>
        <item name="android:paddingBottom">@dimen/text_padding_min</item>
        <item name="android:paddingRight">@dimen/text_padding_max</item>
        <item name="android:paddingLeft">@dimen/text_padding_max</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="navigation_image_size">
        <item name="android:layout_width">@dimen/navigation_icon_size</item>
        <item name="android:layout_height">@dimen/navigation_icon_size</item>
    </style>

    <style name="navigation_text_size">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/title_text_small_size</item>
        <item name="android:paddingLeft">@dimen/navigation_icon_padding</item>
        <item name="android:textColor">@color/text_white</item>
        <item name="fontPath">@string/roboto_regular</item>
    </style>

    <style name="exercise_title_text">
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="tests_title_style">
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">@string/roboto_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="tests_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="fontPath">@string/roboto_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabLayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/blue</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/text_black</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>

    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/text_black</item>
        <item name="textAllCaps">false</item>
        <item name="android:singleLine">true</item>
        <item name="fontPath">@string/roboto_regular</item>
    </style>

    <style name="welcome_button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="exam_result_table_header">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@color/blue</item>
    </style>

    <style name="exam_result_table_title">
        <item name="android:textColor">@color/green</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:background">@color/bg_chart</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="exam_result_table_data">
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/text_black</item>
    </style>


</resources>
