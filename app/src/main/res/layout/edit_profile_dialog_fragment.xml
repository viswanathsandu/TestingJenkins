<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp">

        <EditText
            android:id="@+id/username_txt"
            fontPath="@string/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|left"
            android:hint="Username"
            android:inputType="textCapCharacters" />

        <EditText
            android:id="@+id/firstname_txt"
            fontPath="@string/roboto_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|left"
            android:hint="First Name"
            android:inputType="text" />


        <EditText
            android:id="@+id/lastname_txt"
            fontPath="@string/roboto_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|left"
            android:hint="Last Name"
            android:inputType="text" />


        <EditText
            android:id="@+id/emailid_txt"
            fontPath="@string/roboto_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical|left"
            android:hint="Email Id"
            android:inputType="text" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:weightSum="2">

            <EditText
                android:id="@+id/password_txt"
                fontPath="@string/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:hint="Password"
                android:inputType="textPassword" />

            <EditText
                android:id="@+id/confirm_password_txt"
                fontPath="@string/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical|left"
                android:hint="Confirm Password"
                android:inputType="textPassword" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <com.education.corsalite.views.CustomButton
                android:id="@+id/btn_cancel"
                fontPath="@string/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:text="CANCEL"
                android:textColor="@color/black" />

            <com.education.corsalite.views.CustomButton
                android:id="@+id/btn_submit"
                fontPath="@string/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@color/transparent"
                android:padding="5dp"
                android:text="UPDATE"
                android:textColor="@color/blue" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>