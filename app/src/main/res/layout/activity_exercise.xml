<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.education.corsalite.activities.ExerciseActivity">

    <ViewSwitcher
        android:id="@+id/vs_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/headerProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/gray"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/tv_pagetitle"
                    style="@style/exercise_title_text"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/layout_timer"
                    android:background="@drawable/rounded_corners_green"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:enabled="false"
                        android:textSize="16sp"
                        fontPath="@string/roboto_regular"
                        android:textColor="#80FFFFFF"
                        android:text="TIME LEFT" />

                    <TextView
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:enabled="false"
                        android:textSize="18sp"
                        fontPath="@string/roboto_regular"
                        android:textColor="#40FFFFFF"
                        android:text=" | " />

                    <TextView
                        android:id="@+id/tv_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:enabled="false"
                        android:textSize="18sp"
                        fontPath="@string/roboto_regular"
                        android:textColor="#FFFFFF"
                        android:text=" | " />

                </LinearLayout>

                <ImageView
                    android:padding="2dp"
                    android:layout_marginLeft="10dp"
                    android:visibility="gone"
                    android:id="@+id/imv_refresh"
                    android:background="@drawable/rounded_corners_blue"
                    android:src="@drawable/ico_restart_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:enabled="false"
                    fontPath="@string/roboto_regular"
                    android:text=" | " />


                <Button
                    android:visibility="gone"
                    android:id="@+id/btn_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:enabled="false"
                    android:text="Verify Answer" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/footer_layout"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/layout_header"
                android:layout_marginRight="40dp"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_previous"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/rounded_corner_navigation_left" />

                <Button
                    android:id="@+id/btn_next"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/rounded_corner_navigation_right" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_clearanswer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_header"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/footer_layout"
                android:background="@drawable/shape_rounded_corners_black"
                android:drawablePadding="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:text="Clear Answer"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_level"
                style="@style/exercise_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_header"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp"
                android:layout_toLeftOf="@id/tv_clearanswer" />

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_level"
                android:layout_marginLeft="40dp"
                android:textColor="@color/black" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/tv_comment"
                android:fillViewport="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="40dp"
                    android:paddingRight="40dp"
                    android:paddingTop="10dp">

                    <WebView
                        android:id="@+id/webview_paragraph"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:layout_below="@id/webview_paragraph"
                        android:id="@+id/tv_serial_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center_vertical"
                        android:padding="10dp"
                        android:textColor="@color/black" />

                    <WebView
                        android:layout_below="@id/webview_paragraph"
                        android:id="@+id/webview_question"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tv_serial_no" />

                    <LinearLayout
                        android:id="@+id/answer_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/webview_question"
                        android:orientation="vertical">

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_choice"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/answer_layout"
                        android:background="@drawable/table_row"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableRight="@color/black"
                            android:text="Correct Answers"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="14sp"
                            android:textStyle="bold" />


                        <TextView
                            android:id="@+id/txtAnswerCount"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/explanation_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/layout_choice"
                        android:background="@drawable/table_row"
                        android:orientation="horizontal"
                        android:padding="5dp"
                        android:visibility="gone"
                        android:weightSum="4">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:drawableRight="@color/black"
                            android:text="Explanation"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                        <WebView
                            android:id="@+id/txtAnswerExp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            tools:ignore="WebViewLayout" />

                    </LinearLayout>

                </RelativeLayout>

            </ScrollView>

            <include
                layout="@layout/test_navigator"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" />

        </RelativeLayout>

    </ViewSwitcher>

</LinearLayout>