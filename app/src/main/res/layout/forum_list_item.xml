<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="10dp"
    android:background="@color/webview_background_grey"
    android:orientation="horizontal"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="32dp"
        android:padding="1dp"
        android:background="@color/gray">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="6dp"
            android:src="@drawable/ico_time_selected" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Subject"
            android:textColor="@color/black"
            fontPath="@string/roboto_medium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Subtext by "
                android:textColor="@color/black"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="vissu"
                android:textColor="@color/blue"
                android:textStyle="italic" />
        </LinearLayout>


        <WebView
            android:id="@+id/notes_content_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/webview_background_grey" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <TextView
                android:id="@+id/like"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_015"
                android:gravity="center_vertical"
                android:text="bookmark"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/comments"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_015"
                android:gravity="center_vertical"
                android:text="like"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/views"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_015"
                android:gravity="center_vertical"
                android:text="comment"
                android:textColor="@color/black" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <com.corsalite.tabletapp.views.CustomButton
                android:id="@+id/bookmark_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@drawable/yellowshape_selector"
                android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_015"
                android:text="bookmark"
                android:textColor="@color/text_white" />

            <com.corsalite.tabletapp.views.CustomButton
                android:id="@+id/like_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/greenshape_selector"
                android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_015"
                android:text="like"
                android:textColor="@color/text_white" />

            <com.corsalite.tabletapp.views.CustomButton
                android:id="@+id/comment_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/blueshape_selector"
                android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_015"
                android:text="comment"
                android:textColor="@color/text_white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>