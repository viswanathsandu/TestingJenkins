<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="left"
        android:id="@+id/tv_subject_name"
        android:layout_weight="1"
        android:text="@string/subject_label"
        style="@style/analytics_recommended_reading_text_style"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:gravity="left"
        android:layout_weight="1.5"
        android:id="@+id/tv_chapter"
        android:text="@string/chapter_label"
        style="@style/analytics_recommended_reading_text_style" />

    <TextView
        android:gravity="left"
        android:layout_weight="2"
        android:id="@+id/tv_topic"
        android:text="@string/topic_label"
        style="@style/analytics_recommended_reading_text_style" />

    <TextView
        android:gravity="left"
        android:layout_weight="1"
        android:id="@+id/tv_date"
        style="@style/analytics_recommended_reading_text_style"
        android:text="@string/date_label" />


    <TextView
        android:gravity="left"
        android:layout_weight="1"
        android:id="@+id/tv_marks"
        style="@style/analytics_recommended_reading_text_style"
        android:text="@string/marks_label"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:gravity="left"
        android:layout_weight="1"
        android:id="@+id/tv_accuracy"
        android:text="@string/accuracy_label"
        style="@style/analytics_recommended_reading_text_style"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:gravity="left"
        android:layout_weight="1"
        android:id="@+id/tv_speed"
        android:text="@string/speed_label"
        style="@style/analytics_recommended_reading_text_style"
        android:singleLine="true"
        android:ellipsize="end"/>

    <TextView
        android:gravity="left"
        android:layout_weight="1"
        android:id="@+id/tv_time"
        android:text="@string/time_label"
        style="@style/analytics_recommended_reading_text_style"
        android:singleLine="true"
        android:ellipsize="end"/>
</LinearLayout>