<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_shape">

            <TableRow>
                <TextView
                    style="@style/tiles_menu_title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/completed_topics" />

                <TextView
                    android:id="@+id/completed_topics"
                    style="@style/tiles_menu_value_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow_selector" />
            </TableRow>

            <TableRow>
                <TextView
                    style="@style/tiles_menu_title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/score" />


                <TextView
                    android:id="@+id/score"
                    style="@style/tiles_menu_value_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_selector" />

            </TableRow>

            <TableRow>
                <TextView
                    style="@style/tiles_menu_title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLength="16"
                    android:text="@string/notes" />

                <TextView
                    android:id="@+id/notes"
                    style="@style/tiles_menu_value_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/blue_selector" />

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/start_reading"
                    style="@style/tiles_menu_title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@drawable/option_item_selector"
                    android:text="@string/start_reading" />

            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/flagged_questions"
                    style="@style/tiles_menu_title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@drawable/option_item_selector"
                    android:text="@string/flagged_questions" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/take_test"
                    style="@style/tiles_menu_title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:background="@drawable/option_item_selector"
                    android:text="@string/menu_take_test" />
            </TableRow>

            <TableRow>
                <TextView
                    android:id="@+id/offline_content"
                    style="@style/tiles_menu_title_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="Save for Offline" />
            </TableRow>
        </TableLayout>

    </ScrollView></LinearLayout>