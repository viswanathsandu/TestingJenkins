<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/list_item_popup_layout"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:background="@drawable/white_shape"
    android:orientation="vertical"
    android:padding="16dp">

    <RelativeLayout style="@style/tiles_menu_item_rl">

        <TextView
            style="@style/tiles_menu_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/completed_topics"
            android:text="@string/completed_topics" />

        <TextView
            android:id="@+id/completed_topics"
            style="@style/tiles_menu_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/yellow_selector" />

    </RelativeLayout>

    <RelativeLayout style="@style/tiles_menu_item_rl">


        <TextView
            style="@style/tiles_menu_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/score"
            android:text="@string/score" />


        <TextView
            android:id="@+id/score"
            style="@style/tiles_menu_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/red_selector" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/notes_layout"
        style="@style/tiles_menu_item_rl">

        <TextView
            style="@style/tiles_menu_title_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/notes"
            android:text="@string/notes" />

        <TextView
            android:id="@+id/notes"
            style="@style/tiles_menu_value_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_selector" />

    </RelativeLayout>

    <RelativeLayout style="@style/tiles_menu_item_rl">

        <TextView
            android:id="@+id/start_reading"
            style="@style/tiles_menu_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/option_item_selector"
            android:text="@string/start_reading" />
    </RelativeLayout>

    <RelativeLayout style="@style/tiles_menu_item_rl">

        <TextView
            android:id="@+id/flagged_questions"
            style="@style/tiles_menu_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/option_item_selector"
            android:text="@string/flagged_questions" />
    </RelativeLayout>

    <RelativeLayout style="@style/tiles_menu_item_rl">

        <TextView
            android:id="@+id/take_test"
            style="@style/tiles_menu_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/option_item_selector"
            android:text="@string/menu_take_test" />
        <ImageView
            android:id="@+id/download_test"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:layout_alignParentRight="true"
            android:src="@drawable/download_icon" />
    </RelativeLayout>

    <RelativeLayout style="@style/tiles_menu_item_rl">

        <TextView
            android:id="@+id/offline_content"
            style="@style/tiles_menu_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save for Offline" />
    </RelativeLayout>
</LinearLayout>