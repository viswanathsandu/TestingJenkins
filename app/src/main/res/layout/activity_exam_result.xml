<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp15">

        <TextView
            android:id="@+id/exam_name_txt"
           fontPath="@string/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:text="@string/exam_name"
            android:textColor="@color/text_black"
            android:textSize="@dimen/big_text_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp20"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="3">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp30">

                <TextView
                    fontPath="@string/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/exam_date"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/date_txt"
                    fontPath="@string/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/_00_00_0000"
                    android:textColor="@color/black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp30">

                <TextView
                    fontPath="@string/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/recommended_time"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/recommended_time_txt"
                    fontPath="@string/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/_00"
                    android:textColor="@color/text_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp30">

                <TextView
                    fontPath="@string/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/time_taken"
                    android:textColor="@color/text_gray" />

                <TextView
                    android:id="@+id/time_taken_txt"
                    fontPath="@string/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="@string/_00"
                    android:textColor="@color/text_black" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:background="@color/primary_color"
            android:orientation="horizontal"
            android:padding="@dimen/dp10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp30">

                <TextView
                    fontPath="@string/roboto_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:text="@string/total_questions"
                    android:textColor="@color/light_40" />

                <TextView
                    android:id="@+id/total_questions_txt"
                    fontPath="@string/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_00"
                    android:textColor="@color/text_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp30">

                <TextView
                   fontPath="@string/roboto_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/answered"
                    android:textColor="@color/light_40" />

                <TextView
                    android:id="@+id/answered_txt"
                    fontPath="@string/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_00"
                    android:textColor="@color/text_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp30">

                <TextView
                    fontPath="@string/roboto_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp10"
                    android:text="@string/skipped"
                    android:textColor="@color/light_40" />

                <TextView
                    android:id="@+id/skipped_txt"
                    fontPath="@string/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_00"
                    android:textColor="@color/text_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingRight="@dimen/dp30">

                <TextView
                   fontPath="@string/roboto_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/correct"
                    android:textColor="@color/light_40" />

                <TextView
                    android:id="@+id/correct_txt"
                    fontPath="@string/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_00"
                    android:textColor="@color/text_white" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    fontPath="@string/roboto_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/wrong"
                    android:textColor="@color/light_40" />

                <TextView
                    android:id="@+id/wrong_txt"
                    fontPath="@string/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_00"
                    android:textColor="@color/text_white" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp40"
            android:layout_marginTop="@dimen/dp10">

            <com.education.corsalite.views.CustomButton
                android:id="@+id/view_answers_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp35"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/login_button_bg"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:text="@string/view_answers"
                android:textColor="@color/white" />

            <com.education.corsalite.views.CustomButton
                android:id="@+id/exam_history_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp35"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/login_button_bg"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:text="@string/exam_history"
                android:textColor="@color/white"
                android:visibility="gone" />

            <com.education.corsalite.views.CustomButton
                android:id="@+id/course_analysis_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp35"
                android:layout_marginLeft="@dimen/dp10"
                android:background="@drawable/login_button_bg"
                android:paddingLeft="@dimen/dp20"
                android:paddingRight="@dimen/dp20"
                android:text="@string/course_analysis"
                android:textColor="@color/white"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>