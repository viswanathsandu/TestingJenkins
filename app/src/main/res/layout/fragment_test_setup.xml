<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="550dp"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="5dp"
    tools:context="com.education.corsalite.fragments.TestSetupFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_action_buttons">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/tv_title"
                fontPath="@string/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="16dp"
                android:text="Course Name"
                android:textColor="@color/text_gray"
                android:textSize="22sp" />

            <Spinner
                android:id="@+id/selectSubjectSpinner"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_selectSubjError"
                style="@android:style/TextAppearance.Small"
                fontPath="@string/roboto_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Virtual Currency"
                android:textColor="@color/red"
                android:visibility="gone" />

            <Spinner
                android:id="@+id/selectChapterSpinner"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_selectChapError"
                style="@android:style/TextAppearance.Small"
                fontPath="@string/roboto_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Virtual Currency"
                android:textColor="@color/red"
                android:visibility="gone" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:visibility="visible"
                android:textColorHint="@color/text_gray">

                <EditText
                    android:id="@+id/et_noOfQues"
                    fontPath="@string/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:ems="2"
                    android:hint="@string/ques_hint"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/text_black"
                    android:textColorHint="#46000000"
                    android:textSize="16sp"
                    android:text="10"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_noOfQuesError"
                style="@android:style/TextAppearance.Small"
                fontPath="@string/roboto_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:text="Virtual Currency"
                android:textColor="@color/red"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E1E1E1" />

            <Spinner
                android:id="@+id/examsSpinner"
                style="@android:style/Widget.Holo.Light.Spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:visibility="visible"
                android:textColorHint="@color/text_gray">

                <EditText
                    android:id="@+id/et_timeInMins"
                    fontPath="@string/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:ems="2"
                    android:hint="@string/time_hint"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/text_black"
                    android:textColorHint="#46000000"
                    android:textSize="16sp"
                    android:text="10"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_timeInMinsError"
                style="@android:style/TextAppearance.Small"
                fontPath="@string/roboto_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Virtual Currency"
                android:textColor="@color/red"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E1E1E1" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingBottom="5dp"
                android:visibility="visible"
                android:textColorHint="@color/text_gray">

                <EditText
                    android:id="@+id/et_virCurrency"
                    fontPath="@string/roboto_regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@android:color/transparent"
                    android:ems="2"
                    android:hint="@string/vc_hint"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/text_black"
                    android:textColorHint="#46000000"
                    android:textSize="16sp"
                    android:text="10"/>
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:id="@+id/tv_virCurrencyError"
                style="@android:style/TextAppearance.Small"
                fontPath="@string/roboto_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Virtual Currency"
                android:textColor="@color/red"
                android:visibility="gone" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E1E1E1" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_action_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical|right"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_testsetup_cancel"
            fontPath="@string/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Cancel"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tv_testsetup_next"
            fontPath="@string/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="Challenge"
            android:textColor="@android:color/holo_green_dark" />

    </LinearLayout>

</RelativeLayout>