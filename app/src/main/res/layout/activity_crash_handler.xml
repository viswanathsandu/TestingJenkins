<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.education.corsalite.activities.CrashHandlerActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/crash_handler" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sorry for the inconvenience"
        android:textColor="@color/text_black"
        android:textSize="24sp"
        fontPath="@string/roboto_regular"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please try again"
        android:textColor="@color/text_black"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        fontPath="@string/roboto_regular"/>

</LinearLayout>
