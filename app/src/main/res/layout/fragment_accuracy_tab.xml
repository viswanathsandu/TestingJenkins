<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progress_bar_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:visibility="visible" />

    <TextView
        android:id="@+id/tv_failure_text"
        style="@style/analytics_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/dp10"
        android:drawableTop="@drawable/ico_info"
        android:text="@string/no_analytics_available_for_accuracy_vs_speed"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_accuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/ll_chapter"
                android:visibility="gone"
                android:orientation="vertical">
                <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/analytics_title_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/chapters" />

                <TextView
                    style="@style/analytics_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/accuracy_vs_speed_based_on_recent_365_days_performance" />
            </LinearLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp15">

                <TextView
                    android:id="@+id/tv_accuracy_1"
                    style="@style/analytics_axis_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:rotation="-90"
                    android:text="Accuracy" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp360"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp30"
                    android:layout_toRightOf="@id/tv_accuracy_1"
                    android:orientation="horizontal">

                    <com.github.mikephil.charting.charts.ScatterChart
                        android:id="@+id/sch_accuray_chapter"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp15"
                        android:layout_marginRight="@dimen/dp15"
                        android:layout_marginTop="@dimen/dp8"
                        android:layout_weight="4" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_chapter_legend"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_weight="2"
                        android:scrollbars="vertical" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_speed_1"
                    style="@style/analytics_axis_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dp5"
                    android:paddingLeft="@dimen/dp250"
                    android:text="@string/speed_seconds" />

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp2"
                android:background="@color/dark_gray" />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_dates"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/analytics_title_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/dates" />

                <TextView
                    style="@style/analytics_text_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/accuracy_vs_speed_based_on_recent_365_days_performance" />
            </LinearLayout>

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp15">

                <TextView
                    android:id="@+id/tv_accuracy_2"
                    style="@style/analytics_axis_style"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:rotation="-90"
                    android:text="Accuracy" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp360"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="@dimen/dp30"
                    android:layout_toRightOf="@id/tv_accuracy_2"
                    android:orientation="horizontal">

                    <com.github.mikephil.charting.charts.ScatterChart
                        android:id="@+id/sch_accuray_date"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/dp15"
                        android:layout_marginRight="@dimen/dp15"
                        android:layout_marginTop="@dimen/dp8"
                        android:layout_weight="4" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_dates_legend"
                        android:layout_width="@dimen/dp0"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp10"
                        android:layout_weight="2"
                        android:scrollbars="vertical" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_speed_2"
                    style="@style/analytics_axis_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="@dimen/dp5"
                    android:paddingLeft="@dimen/dp250"
                    android:text="@string/speed_seconds" />

            </RelativeLayout>

        </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>

