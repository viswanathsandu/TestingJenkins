<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chapters"
        style="@style/analytics_title_style"
        android:layout_margin="8dp"/>

    <ProgressBar
        android:id="@+id/progress_bar_tab_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_failure_text_chapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ico_info"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="No Analytics available for Accuracy vs Speed as per Chapters "
        style="@style/analytics_subtext_style"
        android:layout_margin="10dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_accuracy"
        android:visibility="gone">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="A\nc\nc\nu\nr\na\nc\ny\n \n(\n%\n)\n"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            style="@style/analytics_subtext_style"
            android:id="@+id/tv_accuracy_1"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed (Seconds)"
            style="@style/analytics_subtext_style"
            android:id="@+id/tv_speed_1"
            android:layout_centerHorizontal="true"/>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_chapter_legend"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:layout_below="@id/tv_speed_1"
            android:layout_alignParentRight="true"
            android:paddingTop="15dp"
            android:scrollbars="vertical" />
        <com.github.mikephil.charting.charts.ScatterChart
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_toRightOf="@id/tv_accuracy_1"
            android:layout_toLeftOf="@id/rv_chapter_legend"
            android:layout_below="@id/tv_speed_1"
            android:id="@+id/sch_accuray_chapter"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />


    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/dark_gray" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dates"
        style="@style/analytics_title_style"
        android:layout_margin="8dp"/>
    <ProgressBar
        android:id="@+id/progress_bar_tab_dates"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="visible"/>

    <TextView
        android:id="@+id/tv_failure_text_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ico_info"
        android:layout_gravity="center"
        android:visibility="gone"
        android:layout_margin="10dp"
        style="@style/analytics_subtext_style"
        android:text="No Analytics available for Accuracy vs Speed as per Dates "/>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_speed"
        android:visibility="gone">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:text="A\nc\nc\nu\nr\na\nc\ny\n \n(\n%\n)\n"
            style="@style/analytics_subtext_style"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:id="@+id/tv_accuracy_2"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed (Seconds)"
            android:id="@+id/tv_speed_2"
            style="@style/analytics_subtext_style"
            android:layout_centerHorizontal="true"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_dates_legend"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:layout_below="@id/tv_speed_2"
            android:layout_alignParentRight="true"
            android:scrollbars="vertical"
            android:paddingTop="15dp" />

        <com.github.mikephil.charting.charts.ScatterChart
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_toRightOf="@id/tv_accuracy_2"
            android:layout_toLeftOf="@id/rv_dates_legend"
            android:layout_below="@id/tv_speed_2"
            android:id="@+id/sch_accuray_date"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />

    </RelativeLayout>

</LinearLayout>
    </ScrollView>
