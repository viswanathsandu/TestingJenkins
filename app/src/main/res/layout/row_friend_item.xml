<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/tile_view"
        android:layout_width="@dimen/challenge_list_layout_width"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_friend_pic"
            android:layout_width="@dimen/challenge_list_image_size"
            android:layout_height="@dimen/challenge_list_image_size"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="@dimen/img_line_top"
            android:scaleType="centerCrop"
            android:src="@drawable/profile_pic" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_friend_btn"
            android:layout_toRightOf="@+id/iv_friend_pic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_friend_name"
                fontPath="@string/roboto_regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_padding_max"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_friend_email"
                fontPath="@string/roboto_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_friend_name"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingLeft="7dp"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_mail_max" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_friend_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@android:drawable/ic_input_add"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/status_view"
        android:layout_width="@dimen/challenge_list_layout_width"
        android:layout_height="5dp"
        android:background="@color/gray" />

</LinearLayout>
	
	