<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <include layout="@layout/header" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/navigation_welcome"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_dashboard" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="Home" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_profile"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_myprofile" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/title_activity_user_profile" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_study_center"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_studycenter" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/study_center" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_test_series"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_scheduled_tests" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/test_series" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_analytics"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_analytics" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/analytics" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_offline"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_offline" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/offline" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_recommended_reading"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_studycenter" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/recommended_reading" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_progress_report"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_analytics" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/progress_report" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_time_management"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_calendar" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/time_management" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navigation_curriculum"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_analytics" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/curriculum" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/navigation_scheduled_tests"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_scheduled_tests" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/menu_scheduled_test" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_mock_tests"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_mock_tests" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/menu_mock_test" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_challenge_your_friends"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_challenge" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/challenge_your_friends" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_exam_history"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_exam_history" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/menu_exam_history" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_forum"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_forum" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/forum" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_smart_class"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_smartclass" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/smart_class" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_settings"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_settings" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/action_settings" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/navigation_logout"
                style="@style/navigation_drawer_element"
                android:gravity="center"
                android:orientation="horizontal">
                <ImageView
                    style="@style/navigation_image_size"
                    android:src="@drawable/ico_sidemenu_logout" />
                <TextView
                    style="@style/navigation_text_size"
                    android:text="@string/log_out" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>
</LinearLayout>