<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="@dimen/dp10">

    <RelativeLayout
        android:id="@+id/action_buttons_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp10"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/iv_status"
            android:layout_width="@dimen/dp30"
            android:layout_height="@dimen/dp30"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/dp5"
            android:scaleType="centerInside"
            android:src="@drawable/ico_correct" />

        <Button
            android:id="@+id/test_status"
            fontPath="@string/roboto_regular"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp30"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_status"
            android:background="@drawable/button_selector_gray"
            android:maxLines="1"
            android:textAllCaps="false"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp12" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/action_buttons_layout"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dp25">

        <TextView
            android:id="@+id/mock_test_txt"
            style="?android:attr/spinnerDropDownItemStyle"
            fontPath="@string/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/dp3"
            android:paddingLeft="@dimen/dp5"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp12" />

        <TextView
            android:id="@+id/mock_test_time_txt"
            style="?android:attr/spinnerDropDownItemStyle"
            fontPath="@string/roboto_regular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp5"
            android:maxLines="1"
            android:textColor="@color/text_black"
            android:textSize="@dimen/sp10" />

    </LinearLayout>

</RelativeLayout>