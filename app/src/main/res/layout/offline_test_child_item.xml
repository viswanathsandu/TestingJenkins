<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:weightSum="1">

    <TextView
        android:id="@+id/mock_test_txt"
        style="?android:attr/spinnerDropDownItemStyle"
        fontPath="@string/roboto_light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="16sp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="40dp"/>

    <TextView
        android:id="@+id/mock_test_time_txt"
        style="?android:attr/spinnerDropDownItemStyle"
        fontPath="@string/roboto_light"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="12sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1">

    <ImageView
        android:id="@+id/iv_status"
        android:layout_marginRight="5dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:src="@drawable/ico_correct"/>

    <Button
        android:layout_toRightOf="@+id/iv_status"
        android:id="@+id/test_status"
        android:background="@drawable/button_selector_black"
        fontPath="@string/roboto_regular"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:lines="1"
        android:textAllCaps="false"
        android:textColor="@color/text_white"
        android:textSize="12sp" />
    </RelativeLayout>

