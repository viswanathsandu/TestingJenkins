<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/player_img"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/profile_pic"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/rank_txt"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_corners_light_green"
        android:text="1"
        fontPath="@string/roboto_medium"
        android:textColor="@color/text_white"/>

    <TextView
        android:id="@+id/questions_answered_txt"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_corners_blue"
        android:text="0"
        fontPath="@string/roboto_medium"
        android:textColor="@color/text_white"/>

    <TextView
        android:id="@+id/display_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/player_img"
        android:layout_toLeftOf="@+id/questions_answered_txt"
        android:layout_centerVertical="true"
        android:text="Player Name"
        android:textSize="18sp"
        android:textColor="@color/text_white"
        fontPath="@string/roboto_regular"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

</RelativeLayout>