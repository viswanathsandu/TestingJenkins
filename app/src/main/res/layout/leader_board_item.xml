<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/dp5">

    <ImageView
        android:id="@+id/player_img"
        android:layout_width="@dimen/dp40"
        android:layout_height="@dimen/dp40"
        android:src="@drawable/profile_pic"
        android:scaleType="centerInside"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp15"/>

    <TextView
        android:id="@+id/rank_txt"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_corners_light_green"
        android:text="@string/one_1"
        fontPath="@string/roboto_medium"
        android:textColor="@color/text_white"/>

    <TextView
        android:id="@+id/questions_answered_txt"
        android:layout_width="@dimen/dp25"
        android:layout_height="@dimen/dp25"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_corners_blue"
        android:text="@string/zero_0"
        fontPath="@string/roboto_medium"
        android:textColor="@color/text_white"/>

    <TextView
        android:id="@+id/display_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/player_img"
        android:layout_toLeftOf="@+id/questions_answered_txt"
        android:layout_centerVertical="true"
        android:text="@string/player_name"
        android:textSize="@dimen/sp18"
        android:textColor="@color/text_white"
        fontPath="@string/roboto_regular"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"/>

</RelativeLayout>