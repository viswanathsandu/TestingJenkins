<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_post_user_pic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ico_time_selected" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/tv_post_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="middle"
            android:maxLines="1"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="how to solve the given problem. and also can I get a clear explanations for these sums?" />

        <LinearLayout
            android:id="@+id/ll_post_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_post_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"
                android:textStyle="italic"
                android:text="07/09/2015 06:49:18 by" />

            <TextView
                android:id="@+id/tv_post_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/holo_blue_light"
                android:textSize="12sp"
                android:textStyle="italic"
                android:text="Shivkeshav" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_post_question_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            android:text="Find the derivative using first priciples \n \n 1. x power 4+4 \n 2. x+1 that is whole root \n 3. cot x" />

        <LinearLayout
            android:id="@+id/ll_post_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_btn_speak_now" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_post_views"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_post_response_likes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_000"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:text="15 Likes"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_post_response_comments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_000"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:text="4 Comments"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tv_post_response_views"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/abc_btn_check_to_on_mtrl_000"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:text="127 Views"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_post_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_post_action_bookmark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_orange_light"
                android:drawableLeft="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="Bookmarks"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_post_action_Like"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_green_dark"
                android:drawableLeft="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="Like"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tv_post_action_Comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@android:color/holo_blue_dark"
                android:drawableLeft="@drawable/abc_ic_menu_paste_mtrl_am_alpha"
                android:drawablePadding="5dp"
                android:gravity="center_vertical"
                android:paddingBottom="7dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="7dp"
                android:text="Comment"
                android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>