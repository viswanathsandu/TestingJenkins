<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp5"
    android:layout_marginLeft="@dimen/dp5"
    android:layout_marginRight="@dimen/dp5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/white_shape">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_post_user_pic"
                android:layout_width="@dimen/dp50"
                android:layout_height="@dimen/dp50"
                android:padding="@dimen/dp10"
                android:scaleType="centerCrop"
                android:src="@drawable/profile_pic" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dp10">

                <TextView
                    android:id="@+id/tv_post_question"
                    fontPath="@string/roboto_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:maxLines="1"
                    android:text="how to solve the given problem. and also can I get a clear explanations for these sums?"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp16"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_post_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp3"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_post_date"
                        fontPath="@string/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:text="@string/date_time_07_09_2015_06_49_18_by"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/sp12"
                        android:textStyle="italic" />

                    <TextView
                        android:id="@+id/tv_post_user_name"
                        fontPath="@string/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp5"
                        android:maxLines="1"
                        android:text="@string/shivkeshav"
                        android:textColor="@android:color/holo_blue_light"
                        android:textSize="@dimen/sp12"
                        android:textStyle="italic" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <WebView
                android:id="@+id/post_desc_webview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_post_tags"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp5"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/dp18"
                        android:layout_height="@dimen/dp18"
                        android:layout_marginRight="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:src="@drawable/ic_tags" />

                    <TextView
                        android:id="@+id/tv_course_name"
                        fontPath="@string/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:background="@android:color/darker_gray"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/dp2"
                        android:paddingLeft="@dimen/dp5"
                        android:paddingRight="@dimen/dp5"
                        android:paddingTop="@dimen/dp2"
                        android:text="@string/course"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp10"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/tv_subject_name"
                        fontPath="@string/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:background="@android:color/darker_gray"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/dp2"
                        android:paddingLeft="@dimen/dp5"
                        android:paddingRight="@dimen/dp5"
                        android:paddingTop="@dimen/dp2"
                        android:text="@string/subject"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp10"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/tv_chapter_name"
                        fontPath="@string/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:background="@android:color/darker_gray"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/dp2"
                        android:paddingLeft="@dimen/dp5"
                        android:paddingRight="@dimen/dp5"
                        android:paddingTop="@dimen/dp2"
                        android:text="@string/chapter"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp10"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/tv_topic_name"
                        fontPath="@string/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp5"
                        android:background="@android:color/darker_gray"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:paddingBottom="@dimen/dp2"
                        android:paddingLeft="@dimen/dp5"
                        android:paddingRight="@dimen/dp5"
                        android:paddingTop="@dimen/dp2"
                        android:text="@string/topic"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp10"
                        tools:ignore="SmallSp" />

                </LinearLayout>
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/ll_post_views"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal|left"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_post_response_likes"
                        fontPath="@string/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:drawableLeft="@drawable/like_white"
                        android:drawablePadding="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp5"
                        android:paddingLeft="@dimen/dp10"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp5"
                        android:text="@string/likes"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_post_response_comments"
                        fontPath="@string/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:drawableLeft="@drawable/comment"
                        android:drawablePadding="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp7"
                        android:paddingLeft="@dimen/dp0"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp7"
                        android:textColor="@android:color/black"
                        tools:text="@string/comments" />

                    <TextView
                        android:id="@+id/tv_post_action_bookmark"
                        fontPath="@string/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:drawableLeft="@drawable/bookmark"
                        android:drawablePadding="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp7"
                        android:paddingLeft="@dimen/dp0"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp7"
                        android:text="@string/bookmarks"
                        android:textColor="@color/text_black" />

                    <TextView
                        android:id="@+id/tv_post_response_views"
                        fontPath="@string/roboto_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp10"
                        android:drawableLeft="@drawable/view"
                        android:drawablePadding="@dimen/dp5"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/dp7"
                        android:paddingLeft="@dimen/dp0"
                        android:paddingRight="@dimen/dp10"
                        android:paddingTop="@dimen/dp7"
                        android:textColor="@android:color/black"
                        tools:text="@string/views" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:id="@+id/ll_post_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_post_action_lock"
                    fontPath="@string/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@android:color/holo_red_light"
                    android:drawableLeft="@drawable/lock"
                    android:drawablePadding="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:text="@string/lock"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_post_action_delete"
                    fontPath="@string/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@android:color/holo_red_light"
                    android:drawableLeft="@drawable/delete"
                    android:drawablePadding="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:text="@string/delete"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_post_action_edit"
                    fontPath="@string/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableLeft="@drawable/comment_white"
                    android:drawablePadding="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:text="@string/edit"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_post_action_Comment"
                    fontPath="@string/roboto_regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp10"
                    android:background="@android:color/holo_blue_dark"
                    android:drawableLeft="@drawable/comment_white"
                    android:drawablePadding="@dimen/dp5"
                    android:gravity="center_vertical"
                    android:paddingBottom="@dimen/dp5"
                    android:paddingLeft="@dimen/dp10"
                    android:paddingRight="@dimen/dp10"
                    android:paddingTop="@dimen/dp5"
                    android:text="@string/commennt"
                    android:textColor="@android:color/white"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>