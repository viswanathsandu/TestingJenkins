<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/redshape"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingTop="16dp">

    <TextView
        android:id="@+id/subject_name"
        style="@style/grid_text_style"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:lineSpacingMultiplier="1.2"
        fontPath="@string/roboto_bold"
        android:maxLines="2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="Subject name"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="12dp"
        android:weightSum="3">

        <TextView
            android:id="@+id/clock"
            style="@style/grid_child_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ico_tile_time"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="4dp"
            tools:text="00:00:00"
            fontPath="@string/roboto_regular"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/star"
            style="@style/grid_child_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ico_tile_score"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="4dp"
            android:text="28/347"
            android:textSize="12sp"
            android:textColor="@color/white"
            fontPath="@string/roboto_regular"/>

        <TextView
            android:id="@+id/level"
            style="@style/grid_child_text_style"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/ico_tile_level_two"
            android:drawablePadding="4dp"
            android:gravity="center_vertical|left"
            android:paddingLeft="4dp"
            tools:text="level 2"
            android:textSize="12sp"
            android:textColor="@color/white"
            fontPath="@string/roboto_regular"/>
    </LinearLayout>

    <TextView
        style="@style/grid_child_text_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:maxLines="2"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:text="@string/completed_topics"
        android:textSize="12sp"
        android:textColor="@color/white"
        fontPath="@string/roboto_regular"/>

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:id="@+id/progress_id"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/progressdrawable"
        android:layout_gravity="center_vertical"/>

</LinearLayout>