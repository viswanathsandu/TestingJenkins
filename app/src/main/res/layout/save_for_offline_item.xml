<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="subject"
            type="com.education.corsalite.models.SubjectModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <CheckBox
            android:id="@+id/node_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/black"/>

        <ImageView
            android:id="@+id/node_selectors"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/ico_offline_exercise"/>

        <TextView
            android:id="@+id/index_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{subject.subjectName}"/>

        <TextView
            android:id="@+id/index_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{` (` + subject.chapters.size() + `)`}"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ico_arrow_next"/>
    </LinearLayout>

</layout>
