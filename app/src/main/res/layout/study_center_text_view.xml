<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/subjectLayout"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp35"
        android:layout_margin="@dimen/dp5"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/dp5"
        android:paddingRight="@dimen/dp5">

        <TextView
            android:id="@+id/subject"
            style="@style/study_center_title_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp35"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxWidth="@dimen/dp150"
            android:singleLine="true"
            android:text="@string/subject1"
            android:textColor="@drawable/subject_selector"
            android:paddingRight="@dimen/dp35"
            android:paddingLeft="@dimen/dp10"
            android:paddingBottom="@dimen/dp2"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/arrow_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="@dimen/dp10"
            android:paddingRight="@dimen/dp0"
            android:src="@drawable/ico_dropdown_black"
            android:tint="@color/white"
            android:layout_centerVertical="true"
            android:layout_alignRight="@+id/subject"/>
    </RelativeLayout>
</LinearLayout>