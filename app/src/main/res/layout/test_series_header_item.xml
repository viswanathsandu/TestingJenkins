<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp10"
    app:cardBackgroundColor="@color/E6E6E6"
    app:cardCornerRadius="@dimen/dp8"
    app:cardElevation="8dp">

    <LinearLayout
        android:id="@+id/subject_data_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/dp10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/percentage_txt"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp30"
                android:drawableLeft="@drawable/exam_student_icon"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:text="@string/_dash"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp20"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/marks_txt"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dp30"
                android:drawableLeft="@drawable/marks_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:text="@string/dashes_slashe"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp20"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/accuracy_txt"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:drawableLeft="@drawable/accuracy_icon"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:text="0%"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp20"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/speed_txt"
                android:layout_width="@dimen/dp0"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/meter_icon"
                android:drawablePadding="@dimen/dp10"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/dp30"
                android:text="@string/marks_min"
                android:textColor="@color/text_black"
                android:textSize="@dimen/sp20"
                android:layout_weight="1"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>