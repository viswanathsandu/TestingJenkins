<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="64dp"
              android:background="@color/white"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:weightSum="1">

    <TextView
        android:id="@+id/title_txt"
        style="?android:attr/spinnerDropDownItemStyle"
        fontPath="@string/roboto_regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:padding="5dp"
        android:singleLine="true"
        android:textColor="@color/text_black"
        android:textSize="@dimen/sub_title_text_size"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"/>

    <!-- <TextView
         android:id="@+id/test_time_txt"
         style="?android:attr/spinnerDropDownItemStyle"
         fontPath="@string/roboto_light"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="0.3"
         android:padding="5dp"
         android:singleLine="true"
         android:textColor="@color/text_black"
         android:textSize="12sp" />-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.4"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_yetttoattempt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ico_yettoattempt"/>
        <TextView
            android:id="@+id/count_yettoattempt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:layout_marginLeft="5dp"
            android:textColor="@color/text_black"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_notattended"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ico_notattended"/>
        <TextView
            android:id="@+id/count_notattended"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/text_black"
            android:layout_marginLeft="5dp"
            android:gravity="center"/>
        <ImageView
            android:id="@+id/iv_correct"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:scaleType="centerInside"
            android:src="@drawable/ico_correct"/>
        <TextView
            android:id="@+id/count_correct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_size"
            android:textColor="@color/text_black"
            android:gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bgImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|right"
        android:paddingRight="10dp"
        android:layout_weight="0.1">

        <ImageView
            android:id="@+id/download_test"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="centerInside"
            android:src="@drawable/download_icon"/>
    </LinearLayout>
</LinearLayout>