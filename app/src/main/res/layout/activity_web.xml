<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.education.corsalite.activities.WebActivity">

    <ViewSwitcher
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vs_container">

    <ProgressBar
        android:id="@+id/headerProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/top_layout"
            layout="@layout/webview_subject_bar" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#AA000000"/>

        <WebView
            android:layout_marginLeft="10dp"
            android:id="@+id/webView_content_reading"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:gravity="center" />

        <include
            android:id="@+id/footer_layout"
            layout="@layout/webview_footer" />

    </LinearLayout>
    </ViewSwitcher>

</LinearLayout>
