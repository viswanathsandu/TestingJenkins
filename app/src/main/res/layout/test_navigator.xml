<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <View
        android:id="@+id/shadow_view"
        android:background="@drawable/shape_rounded_corners_black_80"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_slider_test"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/btn_right_slider"
            android:elevation="2dp" />

        <LinearLayout
            android:id="@+id/ll_test_navigator"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:elevation="5dp"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/tv_nav_title"
                    style="@style/tests_title_style"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageButton
                    android:id="@+id/info_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/ico_offline_info" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray" />

            <GridView
                android:numColumns="auto_fit"
                android:columnWidth="60dp"
                android:id="@+id/gv_test"
                android:layout_width="match_parent"
                android:layout_height="150dp">

            </GridView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/rounded_corners_blue"
                    android:text="View Full Question Paper"
                    android:textAllCaps="true"
                    android:textColor="@color/white" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="3"
                    android:paddingLeft="80dp">


                    <LinearLayout
                        android:id="@+id/ll_answered"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"
                            android:background="@color/green" />

                        <TextView
                            style="@style/tests_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Answered" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_skipped"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_answered"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"
                            android:background="@color/red" />

                        <TextView
                            android:id="@+id/tv_skipped"
                            style="@style/tests_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Skipped" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_skipped"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"
                            android:background="@color/yellow" />

                        <TextView
                            android:id="@+id/tv_review"
                            style="@style/tests_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Flagged for review" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_unattempted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/ll_review"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="15dp"
                            android:background="@color/gray" />

                        <TextView
                            android:id="@+id/tv_unattempted"
                            style="@style/tests_text_style"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_review"
                            android:text="Unattempted" />

                    </LinearLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/btn_suspend"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_corners_gray"
                        android:padding="5dp"
                        android:text="Suspend" />

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_corners_gray"
                        android:padding="5dp"
                        android:text="Save" />

                    <Button
                        android:id="@+id/btn_submit"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:background="@drawable/rounded_corners_green"
                        android:padding="5dp"
                        android:text="Submit"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>