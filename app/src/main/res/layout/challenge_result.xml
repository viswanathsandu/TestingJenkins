<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/black_bg"
    android:orientation="vertical"
    android:padding="10dp">


    <RelativeLayout
        android:id="@+id/Challenge_result_won_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/trophy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="74dp"
            android:layout_marginStart="74dp"
            android:background="@drawable/ico_challenge_cup" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Challenge_result_but_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <Button
            android:id="@+id/chlnge_hist_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:background="@drawable/button_selector"
            android:backgroundTint="@color/skyblue"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="Challenge history"
            android:textAlignment="center"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/exam_summ_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_selector"
            android:backgroundTint="@color/skyblue"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="Exam Summary"
            android:textAlignment="center"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/chlnge_again_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_selector"
            android:backgroundTint="@color/green"
            android:paddingLeft="5dip"
            android:paddingRight="5dip"
            android:text="Challenge Again"
            android:textAlignment="center"
            android:textAllCaps="false" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/challengepart_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="HURRAY!"
            android:textAllCaps="true"
            android:textColor="@color/text_white"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="@string/participant"
            android:textAllCaps="false"
            android:textColor="@color/text_white" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/but_refresh" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:text="@string/check_result"
            android:textAllCaps="false"
            android:textColor="@color/text_white" />
    </LinearLayout>


</RelativeLayout>