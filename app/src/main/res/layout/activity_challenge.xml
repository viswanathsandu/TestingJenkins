<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0c1029"
    android:fitsSystemWindows="true"
    tools:context="com.education.corsalite.activities.ChallengeActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        android:src="@drawable/field" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="bottom">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal|bottom">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/left_player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/character_anim_left" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/me" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:weightSum="4">

            <LinearLayout
                android:id="@+id/player1_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/right_player1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/character_anim_right" />

                <TextView
                    android:id="@+id/player1_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/player1" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/player2_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/right_player2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/character_anim_right" />

                <TextView
                    android:id="@+id/player2_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/player2" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player3_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/right_player3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/character_anim_right" />

                <TextView
                    android:id="@+id/player3_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/player3" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player4_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="gone">

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/right_player4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/character_anim_right" />

                <TextView
                    android:id="@+id/player4_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/player4" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp420"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvInviteFriends"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp100"
        android:layout_centerInParent="true"
        android:background="#E6001C"
        fontPath="@string/roboto_bold"
        android:gravity="center"
        android:padding="@dimen/dp20"
        android:text="@string/invitefriends"
        android:textColor="#FFF409"
        android:textSize="@dimen/sp40"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>
