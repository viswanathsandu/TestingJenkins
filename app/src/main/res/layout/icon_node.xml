<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:minHeight="48dp"
    android:background="@color/white"
    android:layout_height="match_parent">


    <ImageView
        android:layout_alignParentLeft="true"
        android:id="@+id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ico_offline_arrow_black" />

    <ImageView
        android:layout_alignWithParentIfMissing="true"
        android:id="@+id/icon"
        android:padding="5dp"
        android:layout_toRightOf="@id/arrow_icon"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <TextView
        android:layout_centerVertical="true"
        android:textSize="16sp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/icon"
        android:layout_toLeftOf="@+id/buttonsContainer"
        android:id="@+id/node_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/buttonsContainer"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_addFolder"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="5dp"
            android:src="@drawable/ico_offline_update"/>

        <ImageView
            android:padding="5dp"
            android:id="@+id/btn_delete"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ico_offline_delete"/>
    </LinearLayout>
</RelativeLayout>
